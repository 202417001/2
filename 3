    <script>
        let isLogin = false;
        let isAdmin = false;
        let userData = null;
        // åŠŸèƒ½æœªå¼€å‘æç¤º
        function showNotDeveloped() {
            showTip('è¯¥åŠŸèƒ½è¿˜æœªå¼€å‘ï¼Œæ•¬è¯·æœŸå¾…ï½');
        }
        // åˆ‡æ¢ç™»å½•/æ³¨å†Œè¡¨å•
        function switchAuth(type) {
            if(type === 'login') {
                document.getElementById('loginForm').style.display = 'block';
                document.getElementById('registerForm').style.display = 'none';
            } else {
                document.getElementById('loginForm').style.display = 'none';
                document.getElementById('registerForm').style.display = 'block';
            }
        }
        // å‘é€éªŒè¯ç 
        function sendCode() {
            const email = document.getElementById('regEmail').value;
            if(!email) {
                showTip('è¯·è¾“å…¥é‚®ç®±');
                return;
            }
            // è°ƒç”¨åç«¯æ¥å£å‘é€éªŒè¯ç 
            fetch('/api/sendCode', {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({email})
            }).then(res => res.json()).then(data => {
                if(data.code === 200) {
                    showTip('éªŒè¯ç å·²å‘é€ï¼Œè¯·æ³¨æ„æŸ¥æ”¶');
                } else {
                    showTip(data.msg);
                }
            })
        }
        // æ³¨å†Œå¤„ç†
        function handleRegister() {
            const email = document.getElementById('regEmail').value;
            const code = document.getElementById('regCode').value;
            const pwd = document.getElementById('regPwd').value;
            const pwdConfirm = document.getElementById('regPwdConfirm').value;
            if(!email || !code || !pwd || !pwdConfirm) {
                showTip('è¯·å¡«å†™å®Œæ•´ä¿¡æ¯');
                return;
            }
            if(pwd !== pwdConfirm) {
                showTip('ä¸¤æ¬¡å¯†ç è¾“å…¥ä¸ä¸€è‡´');
                return;
            }
            // è°ƒç”¨åç«¯æ¥å£æ³¨å†Œ
            fetch('/api/register', {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({email, code, pwd})
            }).then(res => res.json()).then(data => {
                if(data.code === 200) {
                    showTip('æ³¨å†ŒæˆåŠŸï¼Œè¯·ç™»å½•');
                    switchAuth('login');
                } else {
                    showTip(data.msg);
                }
            })
        }
        // ç™»å½•å¤„ç†
        function handleLogin() {
            const email = document.getElementById('loginEmail').value;
            const pwd = document.getElementById('loginPwd').value;
            if(!email || !pwd) {
                showTip('è¯·å¡«å†™é‚®ç®±å’Œå¯†ç ');
                return;
            }
            // è°ƒç”¨åç«¯æ¥å£ç™»å½•
            fetch('/api/login', {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({email, pwd})
            }).then(res => res.json()).then(data => {
                if(data.code === 200) {
                    isLogin = true;
                    userData = data.data;
                    // æ˜¾ç¤ºç”¨æˆ·ä¿¡æ¯ï¼Œéšè—è¡¨å•
                    document.getElementById('loginForm').style.display = 'none';
                    document.getElementById('registerForm').style.display = 'none';
                    document.getElementById('userInfo').style.display = 'block';
                    document.getElementById('userName').innerText = userData.nickname;
                    document.getElementById('userEmail').innerText = userData.email;
                    document.getElementById('logoutBtn').style.display = 'block';
                    // æ›´æ–°å…¨å±€ç™»å½•çŠ¶æ€
                    window.isLogin = true;
                    if(userData.isAdmin) window.isAdmin = true;
                } else {
                    showTip(data.msg);
                }
            })
        }
        // é€€å‡ºç™»å½•
        function handleLogout() {
            isLogin = false;
            isAdmin = false;
            userData = null;
            window.isLogin = false;
            window.isAdmin = false;
            document.getElementById('userInfo').style.display = 'none';
            document.getElementById('loginForm').style.display = 'block';
        }
        // æ˜¾ç¤ºæç¤ºå¼¹çª—
        function showTip(text) {
            document.getElementById('tipText').innerText = text;
            document.getElementById('tipModal').style.display = 'flex';
        }
        function switchPage(pageId) {
            document.querySelectorAll('.nav-btn').forEach(btn => btn.classList.remove('active'));
            document.querySelectorAll('.content').forEach(cont => cont.classList.remove('active'));
            document.getElementById(pageId).classList.add('active');
        }
        function switchGrade(grade) {
            document.querySelectorAll('.grade-btn').forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');
        }
        function toggleMenu(btn) {
            const menu = btn.nextElementSibling;
            menu.classList.toggle('show');
        }
        function checkLogin(type) {
            if(!isLogin){
                document.getElementById('loginModal').style.display = 'flex';
            }else{
                if(type === 'like'){
                    event.target.innerHTML = event.target.innerHTML.includes('ğŸ‘ ç‚¹èµ') ? 'ğŸ‘ å·²ç‚¹èµ' : 'ğŸ‘ ç‚¹èµ';
                }else{
                    alert('å›å¤åŠŸèƒ½');
                }
            }
        }
        function checkAdmin() {
            if(!isAdmin){
                document.getElementById('adminModal').style.display = 'flex';
            }else{
                event.target.closest('.confession-item').remove();
            }
        }
        function closeModal() {
            document.getElementById('loginModal').style.display = 'none';
            document.getElementById('adminModal').style.display = 'none';
            document.getElementById('tipModal').style.display = 'none';
        }
    </script>
</body>
